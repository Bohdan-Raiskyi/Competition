@model CompetitionDomain.Model.Result

@{
    ViewData["Title"] = "Створити";
}

<h2>Створити</h2>

<h4>Результат</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SwimId" class="control-label"></label>
                <select asp-for="SwimId" class ="form-control" asp-items="ViewBag.SwimId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SwimmerId" class="control-label"></label>
                <select asp-for="SwimmerId" class ="form-control" asp-items="ViewBag.SwimmerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalTime" class="control-label"></label>
                <input asp-for="ArrivalTime" class="form-control" />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResultTime" class="control-label"></label>
                <input asp-for="ResultTime" class="form-control" />
                <span asp-validation-for="ResultTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place" class="control-label"></label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
